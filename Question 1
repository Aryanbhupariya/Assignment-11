#include <iostream>
using namespace std;

int main(){
    
    int* arr1 = new int[100];
    
    for(int i=0; i<100; i++){
        arr1[i] = (i+1);
    }
    int* arr2 = new int[200];
    for(int i=0; i<200; i++){
        arr2[i] = arr1[i];
    }
    delete[] arr1;
    arr1 = arr2;
    delete[] arr2;
    
    cout<<"Arry resized to 200 elements"<<endl;
    cout<<"first element: "<<arr2[0]<<endl;
    cout<<"Last element: "<<arr2[199]<<endl;
    
    return 0;
}
